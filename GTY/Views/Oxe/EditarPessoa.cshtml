@{
    ViewData["Title"] = "Editar Pessoa - Oxe";
}

<div class="display-2 text-center mb-4">
    Editar Cadastro
</div>

<form>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="Digite um Nome">
        <label for="floatingInput">Nome:</label>
    </div>
    <div class="form-floating mb-3">
        <select class="form-select" id="floatingSelect">
            <option selected disabled>Selecione uma Cidade</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        <label for="floatingSelect">Cidade:</label>
    </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Digite uma Observação" id="floatingTextarea" oninput="autoResize()"></textarea>
        <label for="floatingTextarea">Observação:</label>
    </div>
    <div class="row w-100 text-center mx-auto">
        <a role="button" class="col btn btn-secondary" style="margin-right: 5px;" asp-controller="Oxe" asp-action="Index">Voltar</a>
        <a role="button" class="col btn btn-primary">Editar</a>
    </div>
</form>